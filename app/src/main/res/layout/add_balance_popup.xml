<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Display the current balance -->
    <TextView
        android:id="@+id/balanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Balance: $1000" />

    <!-- SeekBar to select the amount to add -->
    <SeekBar
        android:id="@+id/addBalanceSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000"
        android:progress="0" />

    <!-- Display the selected balance to add -->
    <TextView
        android:id="@+id/selectedBalanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Amount: $0" />

    <!-- Button to add balance -->
    <Button
        android:id="@+id/addBalanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Balance" />

    <!-- Button to close the popup -->
    <Button
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close" />
</LinearLayout>